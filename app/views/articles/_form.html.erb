<%if @article.errors.any?%>
    <h2>The following errors prevented the article from getting created.</h2>
    <ul>
      <%@article.errors.full_messages.each do |msg|%>
        <li>
          <%=msg%>
      </li>
      <%end%>
    </ul>
<%end%>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <fieldset>
        <%= form_for @article do |f|%>
        <div class="form-group">
          <%= f.label :title%>
          <%= f.text_field :title,class: "form-control", placeholder: "Title"%>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description,size: "30x10",class: "form-control", placeholder: "Description"%>
        </div>
          <%= f.submit class:"btn btn-default"%>
          <%= link_to 'All articles list',articles_path(@article),class:"btn btn-info"%>
      <%end%>
    </fieldset>
  </div>
</div>

</div>
